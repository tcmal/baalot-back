{
  "name": "function-starter",
  "version": "1.0.0",
  "description": "Boilerplate for TS cloud functions",
  "main": "index.js",
  "author": "Preston Holmes <preston@ptone.com>",
  "license": "Apache-2.0",
  "dependencies": {
    "@google-cloud/functions-framework": "^1.1.1",
    "@google-cloud/logging-winston": "^1.1.1",
    "@google-cloud/secret-manager": "^3.2.2",
    "@google-cloud/storage": "^5.5.0",
    "@types/bcrypt": "^3.0.0",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/uuid": "^8.3.0",
    "@types/validatorjs": "^3.15.0",
    "bcrypt": "^5.0.0",
    "cassandra-driver": "^4.6.0",
    "jsonwebtoken": "^8.5.1",
    "uuid": "^8.3.1",
    "validatorjs": "^3.21.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/express": "^4.16.1",
    "@types/node": "^12.6.1",
    "express": "^4.16.4",
    "gts": "^1.0.0",
    "ts-node": "^8.1.0",
    "tsc-watch": "^2.1.2",
    "typescript": "^3.4.4"
  },
  "scripts": {
    "check": "gts check",
    "clean": "gts clean",
    "compile": "yarn tsc -p .",
    "dev": "yarn tsc-watch --onSuccess 'yarn run start'",
    "fix": "gts fix",
    "prepare": "yarn run compile",
    "pretest": "yarn run compile",
    "posttest": "yarn run check",
    "deploy-gcf": "cp package.json build/ && yarn run compile && gcloud functions deploy --runtime nodejs10 --trigger-http --source ./build --env-vars-file ./.env.yaml ${FUNCTION_TARGET}",
    "start": "cd build;functions-framework --target ${FUNCTION_TARGET};cd .."
  }
}
